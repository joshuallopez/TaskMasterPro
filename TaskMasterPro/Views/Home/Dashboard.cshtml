@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <h2>Dashboard</h2>
    <p>Welcome, @ViewBag.UserName</p>

    <div class="row">
        <div class="col-md-6">
            <h3>Tasks</h3>
            <p>Manage your tasks effectively.</p>
            <p><a class="btn btn-primary" href="@Url.Action("Index", "Tasks")">View Tasks</a></p>
        </div>
        <div class="col-md-6">
            <h3>Projects</h3>
            <p>Keep track of all your projects.</p>
            <p><a class="btn btn-primary" href="@Url.Action("Index", "Projects")">View Projects</a></p>
        </div>
    </div>

    <p><a class="btn btn-warning" asp-action="Logout">Logout</a></p>
</div>
